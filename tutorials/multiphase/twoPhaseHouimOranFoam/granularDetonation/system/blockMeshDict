FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;

theta #calc "0.5*3.141529/180";
x 5;
y 20;
cellSize 0.015;
nXCells #calc "round($x/$cellSize)";
nYCells #calc "round($y/$cellSize)";


vertices
(
    (0  0  0)
    ($x 0  0)
    ($x $y 0)
    (0  $y 0)
    (0  0  .1)
    ($x 0  .1)
    ($x $y .1)
    (0  $y .1)
);

blocks
(
    hex (0 1 2 3 4 5 6 7) ($nXCells $nYCells 1) simpleGrading (1 1 1)
);

boundary
(
    walls
    {
        type patch;
        faces
        (
            (1 5 4 0)
        );
    }
    outlet
    {
        type patch;
        faces
        (
            (2 6 5 1)
            (3 7 6 2)
        );
    }
    frontBack
    {
        type empty;
        faces
        (
            (0 3 2 1)
            (4 5 6 7)
        );
    }
    center
    {
        type symmetry;
        faces
        (
            (0 4 7 3)
        );
    }
);

mergePatchPairs
(
);

